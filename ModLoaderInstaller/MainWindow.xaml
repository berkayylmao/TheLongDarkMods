<Window x:Class="ModLoaderInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModLoaderInstaller"
        mc:Ignorable="d"
        Title="TLD Mod Loader Installer" Height="140" Width="330" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow">
   <Grid>
      <TextBox Name="txtBoxGameDir" IsEnabled="False" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="302"/>
      <Button Name="btnBrowseGameDir" Content="Select The Long Dark folder" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="302" Click="BtnBrowseGameDir_Click"/>
      <Button Name="btnInstallModLoader" IsEnabled="False" Content="Install mod loader" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="302" Click="BtnInstallModLoader_Click"/>
      <TextBlock Name="lblInstallStatus" Visibility="Hidden" Foreground= "Green" HorizontalAlignment="Left" Margin="10,85,0,0" TextWrapping="Wrap" Text="Installed successfully!" TextAlignment="Center" VerticalAlignment="Top" Width="302"/>

   </Grid>
</Window>
