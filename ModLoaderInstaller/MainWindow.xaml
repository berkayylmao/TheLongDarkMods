<Window x:Class="ModLoaderInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModLoaderInstaller"
        mc:Ignorable="d"
        Title="TLD Mod Loader Installer" Height="160" Width="340" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
   <StackPanel Width="330">
      <TextBox Name="txtBoxGameDir" IsEnabled="False" IsReadOnly="True" Height="20" Margin="10, 10, 10, 5"/>
      <Button Name="btnBrowseGameDir" Content="Select The Long Dark folder" Click="btnBrowseGameDir_Click" Margin="10, 5, 10, 5"/>
      <Button Name="btnInstallModLoader" IsEnabled="False" Content="Install mod loader" Click="btnInstallModLoader_Click" Margin="10, 5, 10, 5"/>
      <TextBlock Name="lblStatus" Visibility="Visible" Foreground= "Black" TextWrapping="Wrap" Margin="12, 5, 12, 10" MaxWidth="310"/>
   </StackPanel>
</Window>
